task main(){
    SetSensorUltrasonic(IN_1);
    while(true){
        //the ultrasonic sensor needs time to read the values
        //that is why we have the 500 millisecond wait
        Wait(500);
        ClearScreen();
        NumOut(0, 0, SensorUS(IN_1));

        if(SensorUS(IN_1) < 50){
            Off(OUT_AC);
        }
        else {
            OnFwd(OUT_AC, 60);
        }
    }
}

